<?xml version="1.0" encoding="UTF-8"?>
<project name="test-automation-hudson-ci" default="test" basedir=".">

	<!-- global properties -->
	<!--import file="ant.os.xml" /-->
	
	<tstamp>
		<format property="current.time" pattern="yyyyMMdd_HHmmss" />
		<format property="mail.time" pattern="dd MMM yyyy HH:mm:ss" />
		<format property="monthAgo" pattern="yyyyMMdd" unit="day" offset="-30" />
	</tstamp>

	<!-- standard folders -->
	<property name="build.dir" location="${basedir}/build" />
	<property name="classes.dir" location="${build.dir}/classes" />
	<property name="classes.main.dir" location="${build.dir}/classes/main" />
	<property name="classes.test.dir" location="${build.dir}/classes/test" />
	<property name="test.reports.dir" location="${build.dir}/test-reports" />
	<property name="src.dir" location="${basedir}/src" />
	<property name="src.test.dir" location="${basedir}/test" />
	<property name="lib.dir" location="${basedir}/lib" />

	<!-- path to compile the src -->
	<path id="lib.compile.path">
	    <fileset dir="${lib.dir}" includes="*.jar"/>
	</path>
	
	<!-- path to compile and run the junits -->
	<path id="test.class.path">
	    <fileset dir="${lib.dir}" includes="*.jar"/>
	    <pathelement location="${classes.main.dir}"/>
	    <pathelement location="${classes.test.dir}"/>
	</path>
	
	
	<!--
		Clean out the build dir
	-->
	<target name="clean">
		<delete quiet="true" verbose="true">
			<fileset dir="${build.dir}" />
		</delete>
		
		<mkdir dir="${build.dir}"/>
	</target>

	
	<!--
		compile the code
	-->
	<target name="compile" depends="clean">
		
		<mkdir dir="${classes.dir}"/>
		<mkdir dir="${classes.main.dir}"/>
		<mkdir dir="${classes.test.dir}"/>
		
		<!-- compile the main classes -->
		<javac destdir="${classes.main.dir}" debug="true">
			<src path="${src.dir}"/>
			<classpath refid="lib.compile.path"/>
		</javac>
		
		<!-- compile the test classes -->
		<javac destdir="${classes.test.dir}" debug="true">
			<src path="${src.test.dir}"/>
			<classpath refid="test.class.path"/>
		</javac>
		
	</target>
	
	
	<!--
		run the unit tests
	-->
	<target name="test" depends="compile">
		
		<mkdir dir="${test.reports.dir}"/>
		
		<junit printsummary="yes">
			<classpath refid="test.class.path"/>
			
			<formatter type="xml"/>
			
			<batchtest fork="yes" todir="${test.reports.dir}">
			    <fileset dir="${src.test.dir}">
			        <include name="**/*Test*.java"/>
			    </fileset>
			</batchtest>
		</junit>
		
	</target>
	
	<!--
		update to specific test-lab
	-->
	<target name="update-to-specific-testlab" >
		
		<propertyfile file="${basedir}/properties/config.properties">
		    <entry key="testlab" value="SampleScripts"/>
		</propertyfile>
		
	</target>

</project>
